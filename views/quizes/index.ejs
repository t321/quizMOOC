<form action="/quizes" method="get">
    <input type="text" name="search" value="">
    <input type="submit" name="" value="Search">
</form>

<table>
    <% if (quizes.length == 0){ %>
        <p>
            Ninguna respuesta encontrada.
        </p>

    <%}%>

    <% var i; for (i = 0; i < quizes.length; i++){ %>
            <tr>
                <td>
                    <a href="/quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a>
                </td>
                <% if (session.user) { %>
                <td>
                    <a href="/quizes/<%= quizes[i].id %>/edit"><button type="button" name="edit">Editar</button></a>
                </td>
                <td>
                    <form action="/quizes/<%= quizes[i].id %>?_method=delete" method="post">
                        <button type="submit" name="borrar" onclick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
                            Borrar
                        </button>
                    </form>
                </td>
                <% } %>
            </tr>
    <% } %>
</table>

<hr />
<% if (session.user) { %>
<a href="/quizes/new"><button type="button" name="nuevo">Nuevo</button></a>
<% } %>
